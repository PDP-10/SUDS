	TRZE INMOV		;SIMPLE CASES
	TRO NEEDCL
	TRO MCHG
	PUSHJ P,PNTPUT		;D=NEW POINT
	JRST (F)@[BRKNUP	;NO UP POINT
		@RKNDN		;NO DOWN
		BRKNRT		;NO RIGHT
		BRKNLF]		;NO LEFT

DEFIJE	FOK(PNU,PND,PNB,PNL)
<	FETCH(T,B,PNR)		;PICKUP DINK TO FOLLOW NEW PGINT
	CLEAR(B,PNR)
	STORE(T,D,PNR)		;IAKE IT "RIGHT" GF NAW POINT
	STORE(DT,PNL)		;MAKE NEW "LEFT" OF IT
	STORE(D,B,PNU)		;MAKE NAW "UP" OF GLD
STORE(B,@,PND)␀mä>^p"|d	d-∏Q!}	$`Q'`hT*)4u-!4|u
