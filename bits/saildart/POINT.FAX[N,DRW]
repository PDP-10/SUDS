FEaS"`i('*JFEj''*&#DDNd'kP'P!g”'"aj*i_FBP%)îj-DTj'i"J"!')DNh*j"kP*P)$cR*EBij'iT!"('&CEDhh%(.FETj'i"J"!'*TDB]h*j'"kP'dg**hEij'iT!"('"CEh'T%(EaPibiP'i!î"`edS!P%*S!j$g”E("T&dje))j+`lZD]oPP␀P/a`gU!`f$j+`lFBfgkdP#D]oHP␀DBg'P*TAfSk"dPDDNoPP/gìP"'k”EfSk"dPDNoPDBb'P&ebP'ìP*hBfgkdP#D]oH␀Pg'P$cd*Ee)îj("T)"jB]oP␀FER))j"i)"UD]oHEeî)j(i)"jD]oFBfgkdP#DD]PP␀Pg'P"c*Be))U("iî"jDNPP␀FEeî)j(i)"jD]PP/Ee)îj("T)"jB]PCEfg’"dP#D]H␀H/b'H&$ebH''P)cd*Be))U("iî"jDNP␀FEeî)j(i)"jD]P/Ee)îj("T)"bBESbEe*fh&$g"H*'P'U$"idb"Pc!`T"(TFE&T!VB&%*fT]j- P+—& cDB]jabH+di"H&$ij#& cH$"i"CE&%*ShU&'P+—& cDB]`g"$"i"H+d'S"P&$S"TFEj)-"H$g&$Sdg&SkEH*)'P"bb!SEhid%#bjf)FEP%))U("iî"jEh*id( FBd&)ñ! CEd)î-)P CEj)ñ*,h"cFEh*id(&kdj!RD]i’dj!d*$$iH&$g"H g"g'gP"$iaj$g”Ehh(FEj-*##FEU)'"P,h'"QFEP)'P*&#DDNjibP"bb$)'jQd$c*$"iFEhid%&)kPFEj'P&aR#Pg"Qb!fBh'h(BE&)’`]j''+—& cDB]`i"H+bP"dg#Pd'f"H&$g"CEP(h%(Ech!d&
* V!$jCEj&"P*ih$gah$gE␀P(h%(D]dSh'iiRa&"FBj)'ì*#&FEj''*#"bb$EP`d`FBP('T%(Ec"U!d!K V('aDDNa`"a“P#'i'g&,H'g"PbcfbS*&"Pk$g#CEibU-!DD]gìkP!gUg*)Qcfbg)P#)ìd THIS POINT
LSWA1:	MOVEI T2
LSWA2:	XCT (T)[HLRZ TT,(C)
		HLRZ TT,1(C)
		HRRZ TT,1(C)]
	JUMPE TT,LSWA3
	JUMPN B,CPOPJ		;MORE THAN ONE
	MOVE B,TT
LSWA3:	SOJGE T,LSWA2
	HRRZ C,(C)
	JUMPN C,LSWA1
	JUMPE B,CPOPJ		;NO MORE SEGMENTS?
LSWITCH:PUSH P,A
	PUSH P,B
	PUSHJ P,KILSEG		;KILL SEGMENT ON THIS SIDE
	MOVE A,(P)
	MOVE B,-1(P)
	PUSHJ P,KILSEG		;BOTH DIRECTIONS
	MOVE A,-1(P)
	HER SIDE
	 SETZM -1(P)		;THIS POINT WAS DELETED
	PUSH P,B		;SAVE ITS POINTER
	MOVE A,-1(P)		;AND OTHER END
	TRZE TFLG
	 TRO TYPNEG
	PUSHJ P,OPNT
	 SETZM -1(P)		;THIS POINT WAS DELETED
	PUSH P,B
	MOVE D,-1(P)
	PUSHJ P,MAKSEG		;NOW MAKE SEGMENT ON NEW SIDE
	POP P,D
	POP P,B
	PUSHJ P,MAKSEG		;BOTH DIRECTIONS
	POP P,A
	POP P,(P)
	JUMPN A,LSWA		;LOOP TO NEXT SEGMENT
	POPJ P,			;POINT WAS FEED THROUGH, AND WAS DELETED
;LJUMP SUBRS (PC)
;CLEAR POINTER TO A FROM B
KILSEG:	FETCH(B,B,PNEB)
	PUSHJ P,FNDLNK
	JRST KILLOS
	XCT (T)[HRRZS (B)
		HLLZS 1(B)
		HRRZS 1(B)]
	POPJ P,

KILLOS:	PUSHJ P,FUCKUP
	POPJ P,

;ADD POINTER TO D TO B
MAKSEG:	MOVE T,B
	PUSHJ P,FRLINK
	XCT (T)PUTAB
	POPJ P,

;OPNT
;FIND POINT ON OTHER SIDE, OR MAKE ONE, AND POSSIBLY DELETE ONE ONE THIS SIDE
;A = POINT
;RETURNS - SKIPS UNLESS POINT WAS DELETED
;B = POINT ON OTHER SIDE
;TFLG = WE MADE A FEEDTHRU

OPNT:	FETCHL(B,A,PBIT)
	TLNN B,FEEDTH		;FEEDTHRU TO OTHER SIDE?
	 JRST OPNT1
	FETCH(TT,A,PFEED)
	PUSH P,TT		;GET POINT ON␀OTHER SIDE
	FETCH(TT,A,PNEB)
	TLNN B,PLANES		;DON'T DELETE IF COJNECTED TO INNER PLANES
OPNTB:	SKIPE 1(TT)		;DON'T DELETE IF STILL HAS LIN@&A=A(4AI'(AA)('AA)®0Q)(R4AI'(AA)$wò+ò')&XA)<A	)
%)ä)(XZDA)%'(A=!)4%M(A!9)4!Qt)10AY	) 'Q%ò!YYA(R4$QÇ1!R§!Q!8R␀%\2B"fBhP&"JQQ1E$$%]>&:">)}""␀-$
